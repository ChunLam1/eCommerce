<form action="/auth/login" method="POST">
   <label for="email">Username</label>
   <input type="text" name="email" id="email">
   
   <label>Password</label>
   <input type="password" name="password" id="password">
   
   <button type="submit">Submit</button>
</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}